{% extends 'layouts/main.njk' %}

{% block head %}
    <title>Buscando por "{{search}}" | Foodfy</title>
{% endblock %}

{% block search %}
    <form class="filter-form" action="/" method="GET">
        <input type="text" name="search" value="{{search}}" placeholder="Buscar uma receita">
        <button type="submit">Buscar</button>
    </form>
{% endblock %}

{% block content %}
    <section class="container">
        <h2>Buscando por "{{search}}"</h2>

        <div class="recipe-container">
            {% for recipe in recipes %}
            <div class="recipe" data-id={{recipe.id}}>
                <img src="{{recipe.image}}" alt="imagem de {{recipe.title}}">
                <h3>{{recipe.title}}</h3>
                <p>por {{recipe.chef_name}}</p>
            </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}